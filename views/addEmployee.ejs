
<!-- Form for Adding a New Employee -->
<div class="container d-flex justify-content-center align-items-center vh-100">
    <form
        action="/dashboard/admin/createEmployee"
        method="POST"
        class="col-11 col-md-7 col-lg-5 p-4 shadow-lg rounded fw-semibold"
        style="background-color: #e9f7ff;">

        <!-- Heading -->
        <div class="text-center mb-4">
            <h1 class="text-primary">Add Employee</h1>
            <p class="text-muted">Fill out the details below to add a new
                employee.</p>
        </div>

        <!-- Name Input -->
        <div class="mb-3">
            <label for="name" class="form-label fw-bold">Name</label>
            <input
                type="text"
                class="form-control input-focus"
                name="name"
                id="name"
                placeholder="Enter employee's name"
                required />
        </div>

        <!-- Email Input -->
        <div class="mb-3">
            <label for="email" class="form-label fw-bold">Email Address</label>
            <input
                type="email"
                class="form-control input-focus"
                name="email"
                id="email"
                placeholder="Enter employee's email"
                required />
        </div>

        <!-- Password Input -->
        <div class="mb-3">
            <label for="password" class="form-label fw-bold">Password</label>
            <input
                type="password"
                class="form-control input-focus"
                name="password"
                id="password"
                placeholder="Enter password"
                required />
        </div>

        <!-- Confirm Password Input -->
        <div class="mb-3">
            <label for="cnf_password" class="form-label fw-bold">Confirm
                Password</label>
            <input
                type="password"
                class="form-control input-focus"
                name="cnf_password"
                id="cnf_password"
                placeholder="Re-enter password"
                required />
        </div>

        <!-- Show Password Toggle -->
        <div class="form-check mb-3">
            <input
                type="checkbox"
                class="form-check-input"
                id="showPassword"
                onclick="togglePasswordVisibility()">
            <label class="form-check-label" for="showPassword">Show
                Password</label>
        </div>

        <!-- Submit Button -->
        <div class="text-center">
            <button
                type="submit"
                class="btn btn-primary w-100 py-2"
                style="background-color: #176b87; border: none; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);">
                Add Employee
            </button>
        </div>
    </form>
</div>

<!-- Scripts for Enhancing UX -->
<script>
    // Function to toggle password visibility
    function togglePasswordVisibility() {
        const passwordInput = document.getElementById('password');
        const confirmPasswordInput = document.getElementById('cnf_password');
        const type = passwordInput.type === 'password' ? 'text' : 'password';
        passwordInput.type = type;
        confirmPasswordInput.type = type;
    }

    // Add focus and blur effects for input fields
    const inputs = document.querySelectorAll('.input-focus');

    inputs.forEach((input) => {
        // Highlight the input field when focused
        input.addEventListener('focus', () => {
            input.style.borderColor = '#176b87'; // Set border to primary color
            input.style.boxShadow = '0 0 8px rgba(23, 107, 135, 0.5)'; // Add glowing effect
        });

        // Remove highlight when blurred
        input.addEventListener('blur', () => {
            input.style.borderColor = '#b2dffb'; // Revert border to normal
            input.style.boxShadow = 'none'; // Remove glow
        });
    });
</script>
