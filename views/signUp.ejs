
<!-- Sign-Up Form -->
<div class="w-100 d-flex justify-content-center align-items-center"
    style="background-color: #E4F1FF; min-height: calc(100vh - 140px);">
    <!-- Adjust for header and footer height (e.g., 140px) -->
    <!-- Form Container: Centered on screen with responsive design -->
    <form action="/create-account" method="POST"
        class="col-11 col-sm-10 col-md-7 col-lg-5 p-3 p-md-4 shadow rounded fw-semibold"
        style="background-color: #CCEFFF; border: 2px solid #176B87; border-radius: 12px;">

        <!-- Heading Section -->
        <div class="text-center mb-3">
            <!-- Main Title for Sign-Up -->
            <h1 class="fw-bold" style="color: #176B87; font-size: 2rem;">Sign
                Up</h1>
            <!-- Subtext: Encouraging the user to create an account -->
            <p style="color: #4C6E83; font-size: 0.9rem;">
                Create an account to get started!
            </p>
        </div>

        <!-- Name Input Section -->
        <div class="mb-3">
            <label for="name" class="form-label"
                style="color: #176B87; font-weight: 600;">Name</label>
            <!-- Text input for user's name, styled and required field -->
            <input type="text" class="form-control" name="name" id="name"
                placeholder="Enter your name"
                style="padding: 10px; font-size: 0.9rem; border: 1px solid #B8E0EA; border-radius: 8px;"
                required />
        </div>

        <!-- Email Input Section -->
        <div class="mb-3">
            <label for="email" class="form-label"
                style="color: #176B87; font-weight: 600;">Email Address</label>
            <!-- Email input with styling and required field -->
            <input type="email" class="form-control" name="email" id="email"
                placeholder="Enter your email"
                style="padding: 10px; font-size: 0.9rem; border: 1px solid #B8E0EA; border-radius: 8px;"
                required />
        </div>

        <!-- Role Selection Section -->
        <div class="mb-3">
            <label for="role" class="form-label"
                style="color: #176B87; font-weight: 600;">Role</label>
            <!-- Dropdown menu for selecting user role (Employee or Admin) -->
            <select class="form-select" name="role" id="role"
                style="padding: 10px; font-size: 0.9rem; border: 1px solid #B8E0EA; border-radius: 8px;"
                required>
                <option value disabled selected>Select your role</option>
                <option value="Employee">Employee</option>
                <option value="Admin">Admin</option>
            </select>
        </div>

        <!-- Password Input Section -->
        <div class="mb-3">
            <label for="password" class="form-label"
                style="color: #176B87; font-weight: 600;">Password</label>
            <!-- Password input with styling and required field -->
            <input type="password" class="form-control" name="password"
                id="password" placeholder="Enter your password"
                style="padding: 10px; font-size: 0.9rem; border: 1px solid #B8E0EA; border-radius: 8px;"
                required />
        </div>

        <!-- Confirm Password Input Section -->
        <div class="mb-3">
            <label for="cnf_password" class="form-label"
                style="color: #176B87; font-weight: 600;">Confirm
                Password</label>
            <!-- Input for confirming password, with similar styling to the password field -->
            <input type="password" class="form-control" name="cnf_password"
                id="cnf_password" placeholder="Re-enter your password"
                style="padding: 10px; font-size: 0.9rem; border: 1px solid #B8E0EA; border-radius: 8px;"
                required />
        </div>

        <!-- Show Password Checkbox Section -->
        <div class="form-check mb-3">
            <!-- Checkbox to toggle visibility of the password and confirm password fields -->
            <input type="checkbox" class="form-check-input" id="showPassword"
                onclick="togglePasswordVisibility()">
            <label class="form-check-label" for="showPassword">Show
                Password</label>
        </div>

        <!-- Submit Button Section -->
        <div class="text-center mb-3">
            <!-- Button for submitting the form, styled with the theme color -->
            <button type="submit" class="btn btn-primary w-100"
                style="background-color: #176B87; border: none; font-weight: bold; padding: 10px 0; font-size: 1rem; border-radius: 8px; transition: background-color 0.3s;">
                Sign Up
            </button>
        </div>

        <!-- Login Link Section -->
        <div class="text-center">
            <!-- Message for users who already have an account -->
            <p style="font-size: 0.85rem; color: #4C6E83;">
                Already have an account?
                <a href="/" class="text-primary fw-bold"
                    style="color: #176B87; text-decoration: none;">Sign In</a>
                instead.
            </p>
        </div>
    </form>
</div>

<!-- Script for Toggling Password Visibility -->
<script>
    // Function to toggle visibility of the password fields
    function togglePasswordVisibility() {
        const passwordInput = document.getElementById('password');
        const confirmPasswordInput = document.getElementById('cnf_password');
        // Toggle the password field type between 'password' and 'text'
        const type = passwordInput.type === 'password' ? 'text' : 'password';
        passwordInput.type = type;
        confirmPasswordInput.type = type;
    }
</script>
